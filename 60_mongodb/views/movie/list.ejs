
<!DOCTYPE html>
<html lang="en">
  <%- include("../header"); %>

<body>
  <%- include("../menu"); %>

  <button
  type="button"
  onclick="location.href='/api/movie/new'"
  class="btn btn-primary"
  >등록
  </button>

  <div class="row row-cols-1 row-cols-md-3">
    <% result.forEach(movie => { %>
    <div class="col mb-4">
      <!-- Card -->
      <div class="card">
  
        <!--Card image-->
        <div class="view overlay">
          <img class="card-img-top" src="https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcSgfkfm5dLNOSsXbJGaHn8P9HgsIQ8E_GL95glYwRmEJM6cOEie&usqp=CAU"
            alt="Card image cap">
          <a href="#!">
            <div class="mask rgba-white-slight"></div>
          </a>
        </div>
  
        <!--Card content-->
        <div class="card-body">
          <!--Title-->
          <h4 class="card-title"><%= movie.title %></h4>
          <!--Text-->
          <p class="card-text"><%= movie.director %></p>
          <!--Text-->
          <p class="card-text"><%= movie.year %></p>
          <!-- Provides extra visual weight and identifies the primary action in a set of buttons -->
          <button type="button" class="btn btn-light-blue btn-md" onclick="location.href='/api/movie/<%=movie._id%>'">Read more</button>
        </div>
  
      </div>
      <!-- Card -->
    </div>
    <% }) %>
  </div>
  <%- include("../footer"); %>
</body>
</html>